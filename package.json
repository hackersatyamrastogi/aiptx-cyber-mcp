{
  "name": "mcp-security",
  "version": "1.0.0",
  "private": true,
  "description": "A collection of Model Context Protocol (MCP) servers for security tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackersatyamrastogi/Cyber_MCPs.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "security",
    "penetration-testing",
    "vulnerability-scanner",
    "nmap",
    "nuclei",
    "sqlmap",
    "ai",
    "claude"
  ],
  "author": "MCP Security Contributors",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
